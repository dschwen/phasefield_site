extends ../node_modules/pug-bootstrap/_bootstrap.pug
append styles
	// Custom styles for this template
	// link(href='../node_modules/pug-bootstrap/css/starter-template.css', rel='stylesheet')
	link(rel='stylesheet', href='/stylesheets/style.css')
	script(src="javascripts/ace.js")

block body
	+navbar-fixed(title,"navbar","inverse")
		+nav_item("/","active") Home
		+nav_item("#") About
		+nav_item("#") Contact
	.container
		.starter-template
			h1= title
			block content

	script.
		var elements = document.getElementsByClassName('mooseinput');
		for (i = 0; i < elements.length; ++i)
		{
			var editor = ace.edit(elements[i]);
			editor.setTheme("ace/theme/github");
			editor.session.setMode("ace/mode/moose");
			editor.setOption("maxLines", 30);
			editor.setOption("minLines", 2);
		}
